# Automatically install peer dependencies
auto-install-peers=true

# Don't fail on mismatched peer dependencies during development
strict-peer-dependencies=false

# Keep isolated node_modules structure (avoid phantom dependencies)
shamefully-hoist=false

# Enforce Node.js version requirements
engine-strict=true

# Always use workspace:* protocol when adding internal dependencies
save-workspace-protocol=true

# Automatically link workspace packages (default behavior, but explicit)
link-workspace-packages=true
