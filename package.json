{
  "name": "learn-session-planner",
  "version": "0.1.0",
  "private": true,
  "description": "A monorepo-based learning session planner for tracking daily, weekly, and custom learning sessions",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "setup": "pnpm install",
    "clean": "rimraf node_modules dist build .next out && pnpm -r exec -- pnpm exec rimraf node_modules dist build .next out",
    "dev": "pnpm --filter @repo/web dev",
    "dev:web": "pnpm --filter @repo/web dev",
    "dev:api": "pnpm --filter @repo/api start:dev",
    "dev:all": "concurrently \"pnpm dev:web\" \"pnpm dev:api\"",
    "build": "pnpm -r build",
    "build:api": "pnpm --filter @repo/api build",
    "typecheck": "pnpm -r typecheck",
    "typecheck:shared-types": "pnpm --filter @repo/shared-types typecheck",
    "lint": "echo 'Lint script will be configured when apps are added'",
    "lint:all": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "prisma:generate": "pnpm --filter @repo/api prisma:generate",
    "prisma:migrate": "pnpm --filter @repo/api prisma:migrate:dev",
    "prisma:studio": "pnpm --filter @repo/api prisma:studio"
  },
  "keywords": [
    "monorepo",
    "learning",
    "planner",
    "react",
    "nestjs",
    "pnpm-workspace"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "rimraf": "^6.0.1"
  }
}
