# Docker Environment Configuration
# Copy this file to .env.docker and fill in the values

# Node Environment
NODE_ENV=development

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=learnsession
POSTGRES_PORT=5432

# API Configuration
API_PORT=4000
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/learnsession

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Web Configuration
WEB_PORT=3000
VITE_API_URL=http://localhost:4000/api

# Production-only (use Docker secrets in production)
# These should be set via Docker secrets, not environment variables
# JWT_SECRET_FILE=/run/secrets/jwt_secret
# JWT_REFRESH_SECRET_FILE=/run/secrets/jwt_refresh_secret
# POSTGRES_USER_FILE=/run/secrets/postgres_user
# POSTGRES_PASSWORD_FILE=/run/secrets/postgres_password
